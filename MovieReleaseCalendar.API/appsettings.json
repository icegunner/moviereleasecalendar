{
  "RavenDb": {
    "Url": "http://ravendb:8080",
    "Database": "MovieReleaseCalendar"
  },
  "TMDb": {
    "ApiKey": "[Enter TMDb API Key Here]"
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": false,
    "targets": {
      "file": {
        "type": "File",
        "name": "file",
        "fileName": "${basedir:processDir=true}/logs/app.log",
        "layout": "${longdate} ${pad:padding=5:inner=${level:uppercase=true}} (${logger}) ${message} | ${exception} | ${all-event-properties}",
        "keepFileOpen": false,
        "concurrentWrites": true,
        "networkWrites": true,
        "archiveEvery": "Day",
        "archiveNumbering": "Date",
        "maxArchiveFiles": 30,
        "archiveFileName": "${basedir:processDir=true}/logs/archives/{#}.log"
      },
      "coloredConsole": {
        "type": "ColoredConsole",
        "name": "coloredConsole",
        "useDefaultRowHighlightingRules": true,
        "detectConsoleAvailable": true,
        "layout": "${longdate}|${pad:padding=5:inner=${level:uppercase=true}} (${logger}) ${message} | ${exception} | ${all-event-properties}"
      }
    },
    "rules": [
      {
        "logger": "System.*",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "Microsoft.*",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "System.Net.Http.HttpClient.*",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "Microsoft.Extensions.Http.DefaultHttpClientFactory",
        "finalMinLevel": "Warn"
      },
      {
        "logger": "Microsoft.Hosting.Lifetime*",
        "finalMinLevel": "Info"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "coloredConsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "file"
      }
    ]
  },
  "Scraping": {
    "Cron": "0 0 * * 0"
  }
}
